{
  "name": "word_rivalry_matchmaking_api",
  "version": "1.0.0",
  "description": "Matchmaking API",
  "main": "index.js",
  "scripts": {
    "build": "npx tsc",
    "start": "nodemon --exec ts-node src/index.ts",
    "test:unit": "jest --coverage --testPathPattern=__tests__/unit --passWithNoTests",
    "test:integration": "jest --coverage --testPathPattern=__tests__/integration --passWithNoTests",
    "lint": "eslint --fix --format stylish 'src/**/*.{ts,tsx,js,jsx}'"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/unit/**/*.test.(ts|tsx)",
      "**/__tests__/integration/**/*.integration.test.(ts|tsx)"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov"
    ]
  },
  "dependencies": {
    "@google-cloud/logging-winston": "^6.0.0",
    "axios": "^1.6.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "joi": "^17.12.1",
    "ts-node": "^10.9.2",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.17",
    "@types/uuid": "^9.0.8",
    "@types/ws": "^8.5.10",
    "jest": "^29.7.0",
    "nodemon": "^3.0.3",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  }
}
